@page
@model MySite.Pages.KontaktModel
@{
    ViewData["Title"] = "Kontakt";
}

<!-- Erfolgsmeldung, falls gesetzt -->
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div style="color: green; font-weight: bold;">
        @Model.SuccessMessage
    </div>
}

@if (!string.IsNullOrEmpty(Model.UnSuccessMessage))
{
    <div style="color: red; font-weight: bold;">
        @Model.UnSuccessMessage
    </div>
}

<form method="post">
    <table border="0" style="border-collapse: collapse; width: 400px;">
        <tr>
            <td>
                <label for="name">Name:</label>
            </td>
            <td>
                <input type="text" id="name" name="Name" style="width: 100%;" />
            </td>
        </tr>
        <tr>
            <td>
                <label for="email">Email:</label>
            </td>
            <td>
                <input type="text" id="email" name="Email" style="width: 100%;" />
            </td>
        </tr>
        <tr>
            <td style="vertical-align: top;">
                <label for="nachricht">Nachricht:</label>
            </td>
            <td>
                <textarea id="nachricht" name="Nachricht" style="width: 100%; height: 100px;"></textarea>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align: right;">
                <button type="submit" style="
                    padding: 10px 20px;
                    border-radius: 12px;
                    border: none;
                    background-color: #4CAF50;
                    color: white;
                    font-size: 16px;
                    cursor: pointer;
                ">
                    Senden
                </button>
            </td>
        </tr>
    </table>
</form>